{
  "name": "@desource/phone-mask-react",
  "version": "0.2.0",
  "description": "React component and hook for international phone number input with smart masking",
  "type": "module",
  "main": "./dist/phone-mask-react.cjs.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/phone-mask-react.cjs.js"
      }
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "dev": "cd demo && vite",
    "build": "vite build && tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "phone",
    "phone-input",
    "phone-mask",
    "phone-number",
    "international-phone",
    "react",
    "react-component",
    "react-hook",
    "input-mask",
    "tel",
    "telephone",
    "country-code",
    "formatting"
  ],
  "author": "Stefan Popov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefanpopov/phone-mask.git",
    "directory": "packages/phone-mask-react"
  },
  "bugs": {
    "url": "https://github.com/stefanpopov/phone-mask/issues"
  },
  "homepage": "https://github.com/stefanpopov/phone-mask/tree/main/packages/phone-mask-react#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@desource/phone-mask": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
